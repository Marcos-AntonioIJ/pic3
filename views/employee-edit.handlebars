{{>navbar}}
<main class="Employee-Cadaster-Page">
    <div class="Employee-Forms-General">
     <form class="formdelete" action="/employeedelete" method="POST">

    <field >
        <input type="hidden" name="id" id="id" value="{{results.id}}">
        <button type="submit" class="login-field-btn delete-button">Excluir</button>
    </field>
    </form>
    <form action="/editemployee" method="POST" autocomplete="off" aria-autocomplete="off" enctype="multipart/form-data">
        
        <fieldset class="cadaster-employee-field">

            
        
                <h2 class="title-cadaster-field">Informações do Empregado</h2>
                <fieldset class="Employee-Information-Fieldset fset formshow"><h3>Dados pessoais</h3>
                    <input type="hidden" name="id" id="id1" value="{{results.id}}">
                    <input type="hidden" name="cnpj" id="cnpj" value="{{results.cnpj}}">
                    <label for="Username">Nome
                        <br><input class="input-bars input-bars-username employee-name" type="text" name="Username" id="Username" required placeholder="Digite aqui..." value="{{results.employeename}}"><br>
                    </label>

                    <label for="Email">Email
                        <br><input class="input-bars input-bars-Email" type="text" name="Email" id="Email"  required placeholder="example@gmail.com" value="{{results.email}}"><br>
                    </label>

                    <label for="Cpf">CPF
                        <br><input class="input-bars input-bars-CPF" type="text" name="Cpf" id="Cpf"  required placeholder="000.000.0.00-00." value="{{results.cpf}}"><br>
                    </label>

                    <label for="Telefone">Telefone
                        <br><input class="input-bars input-bars-Telefone" type="text" name="Telefone" id="Telefone" required placeholder="Digite aqui..." value="{{results.telefone}}"><br>
                    </label>

                    <label for="Idade">Idade
                        <br><input class="input-bars input-bars-Idade" type="number" name="Idade" id="Idade" required placeholder="0" value="{{results.idade}}"><br>
                    </label>

                    <label for="Endereco">Endereço
                        <br><input class="input-bars input-bars-Endereco" type="text" name="Endereco" id="Endereco"  required placeholder="Digite aqui..." value="{{results.endereco}}"><br>
                    </label>

                    <label for="Sexo" class="Gender-Label">Sexo
                        <br><div class="select"><select name="Sexo" id="Sexo"><option selected value="{{results.sexo}}">{{results.sexo}}</option><option value="Masculino">Masculino</option> <option value="Feminino">Feminino</option> <option value="Outros">Outros...</option></select><div class="select_arrow"></div></div>
                    </label>

                    <a class="return-btn-employee" href="/employees-find">Voltar</a>
                    <button class="login-field-btn next-btn" type="button">Avançar</button>
                
                </fieldset>

                <fieldset class="Employee-Bank-Fieldset fset"><h3>Info. Pagamento</h3>

                <label for="Banco">Banco
                    <br><input class="input-bars input-bars-Banco" type="text" name="Banco" id="Banco" placeholder="Digite aqui..." value="{{results.banco}}"><br>
                </label>

                <label for="Agencia">Agência
                    <br><input class="input-bars input-bars-Agencia" type="number" name="Agencia" id="Agencia" placeholder="Digite aqui..." value="{{results.agencia}}">
                </label>
                
                <label for="Nconta">Número da conta
                <br><input class="input-bars input-bars-Nconta" type="number" name="Nconta" id="Nconta" placeholder="Digite aqui..." value="{{results.nconta}}"><br>
                </label>
                
                <button class="login-field-btn next-btn" type="button">Avançar</button>
                <button class="login-field-btn return-btn" type="button">Voltar</button>
                </fieldset>

                <fieldset class="Employee-Images-Fieldset fset"><h3>Fotos (Opcional)</h3>

                <p>Título de Eleitor<br>
                    <input class="input-bars File input-bars-FotoEleitor" type="file" name="Fotoeleitor" id="Fotoeleitor" accept="image/*"><br>
                    <img class="Employee-Photo" src='data:image/jpeg;base64,{{results.fotoeleitor}}'>
                </p>

                <p>Reservista<br>
                    <input class="input-bars File input-bars-Reservista" type="file" name="Reservista" id="Reservista" accept="image/*"><br>
                    <img class="Employee-Photo" src='data:image/jpeg;base64,{{results.reservista}}'>
                </p>


                <p>Identidade<br>
                    <input class="input-bars File input-bars-Identidade" type="file" name="Identidade" id="Identidade" accept="image/*"><br>
                    <img class="Employee-Photo" src='data:image/jpeg;base64,{{results.identidade}}'>
                </p>

            
                <p>Foto CTPS<br>   
                    <input class="input-bars File input-bars-FotoCtps" type="file" name="Fotoctps" id="Fotoctps" accept="image/*"><br>
                   <img class="Employee-Photo" src='data:image/jpeg;base64,{{results.fotoctps}}'>
                </p>

                <p>Comprovante de Residência<br>
                    <input class="input-bars File input-bars-ComprovanteResidencia" type="file" name="Comprovanteresidencia" id="Comprovanteresidencia" accept="image/*" ><br>
                    <img class="Employee-Photo" src='data:image/jpeg;base64,{{results.comprovanteresidencia}}'>
                </p>

                <p>Foto de perfil<br>
                    <input class="input-bars File input-bars-Avatar" type="file" name="Avatar" id="Avatar" accept="image/*" ><br>
                   <img class="Employee-Photo" src='data:image/jpeg;base64,{{results.Avatar}}'>
                </p>
            
                <button class="login-field-btn next-btn" type="button">Avançar</button>
                <button class="login-field-btn return-btn" type="button">Voltar</button>
                </fieldset>
              

                <fieldset class="Employee-Function-Fieldset fset"><h3>Cargo</h3>

                <label for="Setor">Setor<br>
                    <input class="input-bars input-bars-Setor" type="text" name="Setor" id="Setor" placeholder="Digite aqui..." required value="{{results.setor}}"><br>
                </label>
                
                <label for="Estatus">Estatus<br>
                    <input class="input-bars input-bars-Estatus" type="text" name="Estatus" id="Estatus" placeholder="Digite aqui..." required value="{{results.estatus}}"><br>
                </label>
            
                <label for="Salario">Salário<br>
                    <input class="input-bars input-bars-Salario" type="number" name="Salario" id="Salario" placeholder="Digite aqui..." required value="{{results.salario}}"><br>
                </label>
        
                <label for="Ctps">Número da CTPS<br>
                    <input class="input-bars input-bars-CTPS" type="text" name="Ctps" id="Ctps" placeholder="Digite aqui..." value="{{results.ctps}}"><br>
                </label>

                <label for="Password">Senha (Opcional)<br>
                    <input class="input-bars input-bars-password" type="password" name="Password" id="Password" placeholder="Digite aqui..." value="{{results.employeepassword}}"><br>
                </label>
                <button class="login-field-btn return-btn" type="button">Voltar</button>
                <button class="login-field-btn submit-btn" type="submit">Confirmar</button>
                </fieldset>


                <input class="input-bars input-bars-Cnpj" type="number" name="Cnpj" id="Cnpj" placeholder="CNPJ" value={{cnpj}}>
    
        </fieldset>
    </form>
    <br>
    </div>
</main>